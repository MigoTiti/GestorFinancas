<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Nome: "
        android:id="@+id/textView13"
        android:layout_column="0"
        android:textSize="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_row="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nome"
        android:id="@+id/nomeTextoDiag"
        android:layout_column="1"
        android:textSize="20dp"
        android:layout_marginTop="8dp"
        android:layout_row="0" />

    <TextView
        android:text="Tipo: "
        android:id="@+id/textView16"
        android:layout_column="0"
        android:textSize="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_row="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tipo"
        android:id="@+id/tipoTextoDiag"
        android:layout_column="1"
        android:textSize="20dp"
        android:layout_marginTop="8dp"
        android:layout_row="1" />

    <TextView
        android:text="Valor: "
        android:id="@+id/textView18"
        android:layout_column="0"
        android:textSize="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_row="2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="valor"
        android:id="@+id/valorTextoDiag"
        android:layout_column="1"
        android:textSize="20dp"
        android:layout_marginTop="8dp"
        android:layout_row="2" />

    <TextView
        android:text="Parcelas: "
        android:id="@+id/textView20"
        android:layout_column="0"
        android:textSize="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_row="3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="parcelas"
        android:id="@+id/parcelasTextoDiag"
        android:layout_column="1"
        android:textSize="20dp"
        android:layout_marginTop="8dp"
        android:layout_row="3" />

    <TextView
        android:text="Ano de início: "
        android:id="@+id/textView22"
        android:layout_column="0"
        android:textSize="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_row="4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/anoInicioTextoDiag"
        android:layout_column="1"
        android:textSize="20dp"
        android:layout_marginTop="8dp"
        android:layout_row="4" />

    <TextView
        android:text="Ano de término: "
        android:id="@+id/textView23"
        android:layout_column="0"
        android:textSize="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_row="5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/anoFimTextoDiag"
        android:layout_column="1"
        android:textSize="20dp"
        android:layout_marginTop="8dp"
        android:layout_row="5" />

    <TextView
        android:text="Mês de início: "
        android:layout_column="0"
        android:textSize="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_row="6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/mesInicioTextoDiag"
        android:layout_column="1"
        android:textSize="20dp"
        android:layout_marginTop="8dp"
        android:layout_row="6" />

    <TextView
        android:text="Mês de término: "
        android:id="@+id/textView25"
        android:layout_column="0"
        android:textSize="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_row="7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/mesFimTextoDiag"
        android:layout_column="1"
        android:textSize="20dp"
        android:layout_marginTop="8dp"
        android:layout_row="7" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Remover atividade"
        android:id="@+id/removerTudoB"
        android:layout_row="8"
        android:layout_column="0"
        android:layout_columnSpan="2" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Remover parcela única"
        android:id="@+id/removerParcelaB"
        android:layout_row="9"
        android:layout_column="0"
        android:layout_columnSpan="2" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Editar atividade"
        android:id="@+id/editarTudoB"
        android:layout_row="10"
        android:layout_column="0"
        android:layout_columnSpan="2" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Editar parcela única"
        android:id="@+id/editarParcelaB"
        android:layout_row="11"
        android:layout_column="0"
        android:layout_columnSpan="2" />

    <Button
        android:onClick=""
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:id="@+id/cancelarB"
        android:layout_row="12"
        android:layout_column="0"
        android:layout_columnSpan="2" />

</GridLayout>