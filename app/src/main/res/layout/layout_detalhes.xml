<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_column="0"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:layout_row="0"
        android:text="@string/nome2"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/nomeTextoDiag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:layout_row="0"
        android:textSize="20sp" />

    <TextView
        android:layout_column="0"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:layout_row="1"
        android:text="@string/tipo2"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tipoTextoDiag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:layout_row="1"
        android:textSize="20sp" />

    <TextView
        android:layout_column="0"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:layout_row="2"
        android:text="@string/valor2"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/valorTextoDiag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:layout_row="2"
        android:textSize="20sp" />

    <TextView
        android:layout_column="0"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:layout_row="3"
        android:text="@string/parcelas"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/parcelasTextoDiag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:layout_row="3"
        android:textSize="20sp" />

    <TextView
        android:layout_column="0"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:layout_row="4"
        android:text="@string/ano_de_inicio2"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/anoInicioTextoDiag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:layout_row="4"
        android:textSize="20sp" />

    <TextView
        android:layout_column="0"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:layout_row="5"
        android:text="@string/ano_de_termino2"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/anoFimTextoDiag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:layout_row="5"
        android:text="New Text"
        android:textSize="20sp" />

    <TextView
        android:layout_column="0"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:layout_row="6"
        android:text="@string/mes_de_inicio2"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/mesInicioTextoDiag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:layout_row="6"
        android:text="New Text"
        android:textSize="20sp" />

    <TextView
        android:layout_column="0"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:layout_row="7"
        android:text="@string/mes_de_termino2"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/mesFimTextoDiag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:layout_row="7"
        android:text="New Text"
        android:textSize="20sp" />

    <Button
        android:id="@+id/removerTudoB"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_marginStart="5dp"
        android:layout_row="8"
        android:text="@string/remover_atividade" />

    <Button
        android:id="@+id/removerParcelaB"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_marginStart="5dp"
        android:layout_row="9"
        android:text="@string/remover_parcela_unica" />

    <Button
        android:id="@+id/editarTudoB"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_marginStart="5dp"
        android:layout_row="10"
        android:text="@string/editar_atividade" />

</GridLayout>